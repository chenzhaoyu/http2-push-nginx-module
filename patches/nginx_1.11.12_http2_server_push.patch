+
+                return ngx_http_v2_connection_error(h2c,
+                                                    NGX_HTTP_V2_PROTOCOL_ERROR);
+            }
+
+            h2c->enable_push = h2c->enable_push ? value : 0;
+            break;
+
         default:
             break;
         }
